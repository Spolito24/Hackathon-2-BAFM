{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}

<div class="container d-flex mx-auto justify-content-center mt-4 mb-1 ">
    <div class="row d-flex mx-auto flex-wrap-reverse flex-md">
        <div class=" mx-auto col-12 col-md-11 ">
            <div class="my-3 card shadow-lg p-3">
                <h1 class="text-center">{{article.title}}</h1>
                <hr class="m-1">
                <p>{{article.content|raw}}</p>
                
                {% if is_granted('ROLE_ADMIN') %}
                <hr class="m-1">
                <div class="d-flex justify-content-between mt-auto p-2">
                    <a class="btn btn-success m-0 shadow-lg text-white" href="{{ path('admin_edit_article', {'id': article.id}) }}">Modifier</a>
                    {{ include('article/_delete_form.html.twig') }}
                </div>
            {% endif %}

            </div>
        </div>
    </div>
</div>

<a class="btn btn-success m-0 shadow-lg text-white rounded-pill me-2 bg-dark mb-2" href="{{ path('app_category_show', {'id': article.category.id}) }}">Retour</a>
{% endblock %}