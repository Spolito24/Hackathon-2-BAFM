{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
   
<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 justify-content-center g-5 mx-auto my-5">
    <h1>{{ category.title }}</h1>

    <div class="row row-cols-1 row-cols-md-2 justify-content-center row-cols-xl-3 g-2 mx-2">
        {% for article in category.articles %}
        <div class="col">
            <div class="card h-100 shadow-lg p-2">
                <div class="card-body d-flex flex-column">
                    <h3 class="card-title fs-2">{{ article.title }}</h3>
                    <p>{{ article.content|striptags|u.truncate(100, '...', false) |raw }}</p>                  
                </div>
                <a href="{{ path('app_article_show', {'id': article.id}) }}" class="mx-3 btn btn-primary text-white">
                    Consulter</a> 
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}